                    <h5>QUELQUES LIENS</h5>
                    <div class="dropdown-divider"></div>
                    <p><a href="{{ path('home') }}">accueil</a></p>
                    <p><a href="{{ path('maison_index') }}">maisons</a></p>
                    <p><a href="{{ path('cart_index') }}">panier</a></p>
                    <p><a href="{{ path('contact') }}">contact</a></p>
                    <p><a href="{{ path('admin') }}">admin</a></p>
                </div>
                <div class="col-4 my-auto">
                    <img src="{{ asset('img/logo.png') }}" alt="logo SUBL'IMMO" class="w-100">
                </div>
                <div class="col-4">
                    <h5>COORDONNÉES</h5>
                    <div class="dropdown-divider"></div>
                    <p>12 rue du Village</p>
                    <p>12345 VILLE</p>
                    <p>01 23 45 67 89</p>
                    <p>contact@sublimmo.com</p>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center" id="copyright">
                    <p>Copyright © 2022 - David HURTREL</p>
                </div>
            </div>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="{{ asset('js/script.js') }}"></script>

        {% block javascripts %}{% endblock %}

    </body>

</html>
