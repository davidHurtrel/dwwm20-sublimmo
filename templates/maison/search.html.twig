{% extends 'base.html.twig' %}

{% block title %}recherche{% endblock %}

{% block body %}

    <header class="container-fluid p-5 text-center bg-light">
        <h1>SUBL'IMMO - toutes les maisons</h1>
    </header>

    <main class="container-fluid">
        <div class="p-5">
            <div class="col-8 p-5">

                <h2>Formulaire</h2>
                {{ form(searchForm) }}

                {% if maisons %}
                    <h2>RÃ©sultats</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>NOM</th>
                                <th>PIECES</th>
                                <th>CHAMBRES</th>
                                <th>SURFACE</th>
                                <th>BUDGET</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for maison in maisons %}
                                <tr>
                                    <td>{{ maison.title }}</td>
                                    <td>{{ maison.rooms }}</td>
                                    <td>{{ maison.bedrooms }}</td>
                                    <td>{{ maison.surface }}</td>
                                    <td>{{ maison.price }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}

            </div>
        </div>
    </main>
    
{% endblock %}